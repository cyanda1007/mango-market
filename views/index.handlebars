<div class="content-wrapper">
    <div class="content">
        <h2 class="content-head is-center">MANGO TOP DEALS</h2>

        <div class="pure-g">
            <div class="l-box pure-u-1 pure-u-md-1-2 pure-u-lg-1-4">
                {{#each topDeal}}
                <h3 class="content-subhead">
                    <i class="fa fa-shopping-cart"></i>
                    {{this.shop_name}
                </h3>
                <p>
                    {{this.qty}} for R{{this.price}}
                </p>
                {{/each}}
            </div>
        </div>

        <div class="pure-g">
            <h2>{{name}}</h2>
            <div class="l-box pure-u-1 pure-u-md-1-2 pure-u-lg-1-4">
                {{#each mangoDeals}}
                <h3 class="content-subhead">
                    <i class="fa fa-shopping-cart"></i>
                    {{this.qty}} for R{{price}}
                </h3>
                {{/each}}

            </div>
        </div>
    </div>
</div>









